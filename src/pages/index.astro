---
import { SITE } from '~/config.mjs';
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const meta = {
  title: SITE.title,
  description: SITE.description,
  dontUseTitleTemplate: true,
};
---

<Layout {meta}>
  <!-- Hero Widget ******************* -->

  <Hero
    callToAction={{ text: 'Contact us', href: 'tel:+01-323-586-0800', icon: 'tabler:phone-call' }}
    callToAction2={{ text: 'Learn more', href: '#features' }}
    image={{ src: import('~/assets/images/LACC-exterior.jpg'), alt: 'LACC Exterior' }}
  >
    <Fragment slot="title">
      LA Center Closeout 
      <!-- <span class="hidden xl:inline"></span>
      <span class="text-accent dark:text-white highlight"></span> -->
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        <span class="font-semibold">LA Center Closeout</span> is the premier liquidation center for name-brand wholesale goods in Los Angeles, California
        </span
      >
      <!-- <span class="block mb-1 sm:hidden font-bold text-blue-600"></span> -->

    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->

  <Note />

  <!-- Features Widget *************** -->

  <Features
    highlight="The LA Center Closeout Difference"
    title="Why you'll be happy to work with us"
    subtitle="We are the best in wholesale of liquidation, overstock, and returns of high quality, name-brand items"
    items={[
      [
        {
          title: 'High quality',
          description:
            'We only sell the highest quality, American name-brand products',
          icon: 'tabler:thumb-up',
        },
        {
          title: 'Wholesale',
          description:
            'We sell by the truckload and by the pallet',
          icon: 'tabler:forklift',
        },
        {
          title: 'Customer Service',
          description:
            'We offer professional, personalized customer service',
          icon: 'tabler:list-check',
        },
      ],
      [
        {
          title: 'Grow your business',
          description:
            'Work with the best in wholesale to grow your business',
          icon: 'tabler:rocket',
        },
        {
          title: 'Long term purchasing relationships',
          description:
            'We work together with you to build business relationships for the long term',
          icon: 'tabler:arrows-right-left',
        },
        {
          title: 'Always growing and expanding markets',
          description:
            'We are always looking for new sellers and buyers to expand the reach of high quality closeout goods',
          icon: 'tabler:bulb',
        },
      ],
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    highlight="Our products"
    title="What sort of products do you sell?"
    items={[
      {
        title: 'Makeup',
        description:
          'The highest quality makeup ready for resale',
      },
      {
        title: 'Cleaning supplies',
        description:
          'Name brand cleaning supplies',
      },
      {
        title: 'Home goods',
        description:
          'The best in home goods',
      },
    ]}
    image={{
      src: import('~/assets/images/LACC-makeup.jpg'),
      alt: 'Makeup on desk',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">American name-brand goods</h3>
      We sell the finest in American name brand closeout goods
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isReversed
    isAfterContent
    items={[
      {
        title: 'Maybelline, Essie, Covergirl',
      },
      {
        title: 'Pampers, GoodNites, Kotex, Depend',
      },
      {
        title: 'Clorox, Lysol, Air wick, Woolite',
      },
      {
        title: 'Inventory always changing, call us for updated product lists',
      },
    ]}
    image={{
      src: import('~/assets/images/LACC-makeup-box.jpg'),
      alt: 'Vintage Image',
    }}
  />

  <!-- Steps Widget ****************** -->

  <Steps
    title="Let's work together."
    items={[
      {
        title: 'Step 1: <span class="font-medium">Contact us</span>',
        description:
          'We have a consultation call and assess how our business goals align',
        icon: 'tabler:phone',
      },
      {
        title: 'Step 2: <span class="font-medium">Place order</em>',
        description:
          'Our streamlined ordering process ensures a smooth and efficient experience for the client. As the orders are processed and shipped, the client gains access to our premium liquidation merchandise, exceptional customer support, and unbeatable deals.',
        icon: 'tabler:box',
      },
      {
        title: 'Step 3: <span class="font-medium">Ongoing support</span>',
        description:
          'We are here every step of the way to ensure business runs smoothly for both parties',
        icon: 'tabler:users',
      },
      {
        title: 'Ready!',
        icon: 'tabler:check',
      },
    ]}
    image={{
      src: import('~/assets/images/LACC-warehouse-interior.jpg'),
      alt: 'Steps image',
    }}
  />

